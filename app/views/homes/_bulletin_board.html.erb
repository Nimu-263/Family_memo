<div class="bulletin-board-header">
  <div class="board-name">
    <h1>掲示板</h1>
  </div>
  <div class="board-form">
    <%= form_with url: homes_path, method: :post, id: "form" do |form| %>
      <%= form.text_field :title, placeholder: " タイトル " %>
      <%= form.text_area :content, rows: 3, placeholder: " 内容 " %>
      <%= form.submit 'メモを追加', id: "submit" %>
    <% end %>
  </div>
</div>

<% @boards.each do |board| %>
  <div class="memo">
    <div class="memo-date">
      投稿日時：<%= board.created_at %>
    </div>
    <div class="memo-content">
      <%= board.title %>
      <%= board.content %>
    </div>
  </div>
<% end %>