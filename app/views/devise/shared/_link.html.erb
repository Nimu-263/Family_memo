<% if controller_name != 'sessions' %>
  <%= link_to "ログインする場合はこちら", new_session_path(resource_name), class: 'page-transition-btn'%><br>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "初めてご利用の場合はこちら (アカウント作成)", new_registration_path(resource_name), class: 'page-transition-btn'%><br>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れた場合はこちら", new_password_path(resource_name), class: 'forget-password' %><br>
<% end %>